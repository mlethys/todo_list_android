<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="pl.mlethys.todolist.view.MainActivity"
    tools:ignore="MergeRootFrame" >
    <TextView 
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_text" 
        android:textSize="30sp"
        android:layout_gravity="center"/>
    <Button 
        android:id="@+id/add_project_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100sp"
        android:onClick="goToNewProject"
        android:text="@string/add_button"/>
    <Button
        android:id="@+id/current_projects_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="goToCurrentProjects"
        android:text="@string/current_button"/>
    <Button
        android:id="@+id/completed_projects_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="goToCompletedProjects"
        android:text="@string/completed_button" />
</LinearLayout>

